<div class="container">

  <div class="contents row">
    <div class="container">
      <h2 class="display-4 my-4 text-info ">Sign up</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field ">
        <%= f.label :nickname %> <em>(6 characters maximum)</em><br />
        <%= f.text_field :nickname, autofocus: true, class: "form-control " %>
      </div>

      <div class="field">
        <%= f.label :profile %><br />
        <%= f.text_area :profile, class: "form-control"%>
      </div>


      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email ,class:"form-control", placeholder: "name@example.com"%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions mt-3 ">
        <%= f.submit "Sign up", class:"btn btn-outline-info"%>
      </div>
      <% end %>
    </div>
  </div>
</div>