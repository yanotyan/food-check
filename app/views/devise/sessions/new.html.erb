<div class="contents row">
  <div class="container px-2">
    <h2 class="display-4 my-4 text-info">Log in...</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true , class: "form-control p-3 mb-2 "%>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control p-3 mb-2 " %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.label :remember_me %><br />
      <%= f.check_box :remember_me ,class: "check"%>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-outline-info" %>
    </div>
    <% end %>
  </div>
</div>