  <div class="container">
    <div class="row header h3 ">
      <div class="col-3"></div>
      <div class="col-6 p-4">
        <%= @nickname %>さんの投稿一覧
      </div>
      <div class="col-3 p-4">
        <%=link_to 'TOPにもどる', root_path,class: "btn btn-sm btn-warning" %>
      </div>


    </div>
    <div class="container">
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row md-2 ">

            <% @post.each do |post| %>
            <div class="card  col-5 flex-md-row m-4 shadow-sm h-md-250 py-3">
              <div class="card-body d-flex flex-column align-items-start">

                <h1 class="d-inline-block mb-2 text-primary"><%=post.name%></h1>
                <div class="mb-1 text-muted"><%=post.created_at%></div>
                <%=post.user.nickname%>


                <div class="btn-group">
                  <%= link_to '詳しく見る', post_path(post.id), class: "btn btn-sm btn-outline-secondary"%>
                </div>

              </div>
              <div class="image ">
                <%= image_tag "#{post.photo.url}", class: "miniphoto" %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container footer">© 2021 FOOD-CHECK</div>